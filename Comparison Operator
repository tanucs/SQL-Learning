-- #1 Retrieve all customers from Germany. = operator example

SELECT *
FROM customers
WHERE country = 'Germany'

-- #2 Retrieve all cusomers who are not from Germany. <> != example

SELECT *
FROM customers
WHERE country != 'Germany'

--OR-- ANOTHER WAY

SELECT *
FROM customers 
WHERE country <> 'Germany'

-- #3 Retrieve all customers with a score greater than 500

SELECT * 
FROM customers
WHERE score > 500

-- #4 Retrieve all customers with a score of 500 or more

SELECT *
FROM customers
WHERE score >= 500

--Retrieve all customers with a score less than 500

SELECT*
FROM customers
WHERE score < 500

--Retrieve all customers with a score of 500 or less

SELECT *
FROM customers 
WHERE score <= 500
